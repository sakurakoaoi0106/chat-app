<div class="side-header">
   <div class="s-name">
      <%= link_to edit_user_path(current_user), class:"name-underline" do %>
        <%= current_user.name %>
      <% end %>
   </div>
  <div class="s-btn">
    <%= link_to "チャットを作成する", new_room_path %>
  </div>

</div>

<div class="rooms">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
        <%= link_to room.name, room_messages_path(room) %>
      </div>
    </div>
  <% end %>
</div>